.page-content{
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.search-input{
  display: inline-block;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  border: 1rpx solid #2F7AF1;
  padding: 0 10rpx;
}
.search-btn{
  margin-top: 40rpx;
  width: 560rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #2F7AF1;
  color:#fff;
  text-align: center;
  border-radius: 10rpx;
}